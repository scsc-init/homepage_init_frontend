{
  "name": "scsc-frontend",
  "version": "0.2.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "lint:chk": "next lint --quiet",
    "format:prettier": "prettier --write .",
    "format:chk:prettier": "prettier --check .",
    "format": "npm run format:prettier && npm run lint:fix",
    "format:chk": "npm run format:chk:prettier && npm run lint:chk",
    "prepare": "husky"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown",
    "*.{js,jsx,ts,tsx}": "eslint --fix"
  },
  "dependencies": {
    "@mdxeditor/editor": "^3.6.0",
    "@radix-ui/colors": "^3.0.0",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-navigation-menu": "^1.2.0",
    "@radix-ui/react-select": "^2.1.0",
    "highlight.js": "^11.11.1",
    "immer": "^10.1.1",
    "marked": "^13.0.1",
    "marked-react": "^2.0.0",
    "next": "15.5.10",
    "next-auth": "^4.24.13",
    "normalize.css": "^8.0.1",
    "react": "^18",
    "react-dom": "^18",
    "react-hook-form": "^7.52.0",
    "react-markdown": "^10.1.0",
    "react-swipeable": "^7.0.2",
    "rehype-highlight": "^7.0.2",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.1",
    "sqlite": "^5.1.1",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@svgr/webpack": "^8.1.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "eslint": "^8.57.1",
    "eslint-config-next": "15.5.10",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "postcss": "^8",
    "prettier": "^3.6.2",
    "typescript": "^5"
  },
  "overrides": {
    "glob": "10.5.0",
    "preact": "10.28.2"
  }
}
